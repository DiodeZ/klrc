<UserControl x:Class="klrc.karalabel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="300">
    <Grid>
        <TextBlock x:Name="lbBg" TextWrapping="NoWrap" Text="karatext" FontSize="36" VerticalAlignment="Center" HorizontalAlignment="Left" />
        <TextBlock x:Name="lbFr" TextWrapping="NoWrap" Text="karatext" FontSize="36" HorizontalAlignment="Left" VerticalAlignment="Center" />
    </Grid>
</UserControl>
